# Application Info
TAURI_APP_NAME="{{APP_NAME}}"
TAURI_APP_IDENTIFIER={{APP_IDENTIFIER}}
TAURI_APP_VERSION={{APP_VERSION}}

# Window Settings
TAURI_WINDOW_TITLE="{{WINDOW_TITLE}}"
TAURI_WINDOW_WIDTH={{WINDOW_WIDTH}}
TAURI_WINDOW_HEIGHT={{WINDOW_HEIGHT}}
TAURI_WINDOW_RESIZABLE=true
TAURI_WINDOW_FULLSCREEN=false

# Development Server
TAURI_DEV_HOST={{DEV_HOST}}
TAURI_DEV_PORT={{DEV_PORT}}

# FrankenPHP Settings
TAURI_FRANKENPHP_VERSION={{FRANKENPHP_VERSION}}
TAURI_PHP_VERSION={{PHP_VERSION}}
TAURI_PHP_EXTENSIONS={{PHP_EXTENSIONS}}

# Build Settings
TAURI_BUILD_DEBUG=false
TAURI_OBFUSCATE_CODE=false

# Code Signing (Optional)
# TAURI_SIGN_WINDOWS=false
# TAURI_SIGN_MACOS=false
# TAURI_MACOS_SIGNING_IDENTITY=
# TAURI_WINDOWS_CERTIFICATE_THUMBPRINT=

# Mobile Settings (Android)
# TAURI_ANDROID_PACKAGE_NAME=com.example.app
# TAURI_ANDROID_MIN_SDK=24
# TAURI_ANDROID_TARGET_SDK=33

# Mobile Settings (iOS)
